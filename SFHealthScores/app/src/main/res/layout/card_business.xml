<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_half_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_half_margin">

    <!-- Business Card View -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_business_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_business_height"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/dark_gray"
        card_view:cardCornerRadius="@dimen/cardview_default_radius">
        <!-- Top Right -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:orientation="vertical"
            android:padding="@dimen/small_size">
            <!-- Extra -->
            <TextView
                android:id="@+id/card_business_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="extra"
                android:textColor="@color/white"
                android:textSize="@dimen/very_small_text_size" />
            <!-- Score -->
            <TextView
                android:id="@+id/card_business_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="99"
                android:textColor="@color/white"
                android:textSize="@dimen/h2_text_size" />
        </LinearLayout>
        <!-- Bottom Left -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:orientation="vertical"
            android:padding="@dimen/small_size">
            <!-- Business Address -->
            <TextView
                android:id="@+id/card_business_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Business Address"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />
            <!-- Business Name -->
            <TextView
                android:id="@+id/card_business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Business Name"
                android:textColor="@color/white"
                android:textSize="@dimen/h3_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>